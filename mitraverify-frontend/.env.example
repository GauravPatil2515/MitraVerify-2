# Environment Variables for MitraVerify Frontend

# Production API URL - Update this with your deployed backend URL
NEXT_PUBLIC_API_URL=https://your-backend-api.herokuapp.com

# Application Configuration
NEXT_PUBLIC_APP_NAME=MitraVerify
NEXT_PUBLIC_APP_VERSION=2.0

# API Configuration
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# Feature Flags
NEXT_PUBLIC_ENABLE_IMAGE_ANALYSIS=true
NEXT_PUBLIC_ENABLE_TEXT_ANALYSIS=true
NEXT_PUBLIC_ENABLE_EVIDENCE_RETRIEVAL=true

# Analytics (optional)
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_HOTJAR_ID=XXXXXXX

# Error Reporting (optional)
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Development/Staging URLs
# NEXT_PUBLIC_STAGING_API_URL=https://staging-api.your-domain.com
# NEXT_PUBLIC_DEV_API_URL=http://localhost:8000